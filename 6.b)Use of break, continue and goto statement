//Break Statement
 #include<stdio.h>
 void main (){
     int i;
     for(i = 0; i<10; i++)
     {
         printf("%d ",i);
         if(i == 5)
         break;
     }
     printf("came outside of loop i = %d",i);
 }

//Continue statement
 #include <stdio.h>
 int main(){
     for (int i = 1; i <= 10; i++) {
         if (i == 5) {
             continue;
         }
         printf("%d ", i);
     }
     return 0;
 }

//Goto statement
 void main()
 {
     int x,y;
     for (x=0;x<3;x++)
     {
         for(y=0;y<3;y++)
         {
             printf("%d\t%d\n",x,y);
             goto out;
         }
         printf("%d\n",x);
     }
     out:printf("EXIT");
 }